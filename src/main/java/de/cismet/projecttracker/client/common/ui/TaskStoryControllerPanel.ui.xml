<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:de.cismet.projecttracker.client.common.ui">
	<ui:style>
		.taskboard {
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:AbsolutePanel ui:field="boundaryPanel">
			<g:HTMLPanel>
                            <div class="controlPanel">
			  <div class="row">
					<div class="span1V2 columns">
						<t:TaskStoryController ui:field="monday" styleName="{style.taskboard}" />
					</div>
	
					<div class="span1V2 columns">
						<t:TaskStoryController ui:field="tuesday" styleName="{style.taskboard}" />
					</div>
	
					<div class="span1V2 columns">
						<t:TaskStoryController ui:field="wednesday" styleName="{style.taskboard}" />
					</div>
	
					<div class="span1V2 columns">
						<t:TaskStoryController ui:field="thursday" styleName="{style.taskboard}" />
					</div>
	
					<div class="span1V2 columns">
						<t:TaskStoryController ui:field="friday" styleName="{style.taskboard}" />
					</div>
	
					<div class="span1V2 columns">
						<t:TaskStoryController ui:field="saturday" styleName="{style.taskboard}" />
					</div>
	
					<div class="span1V2 columns">
						<t:TaskStoryController ui:field="sunday" styleName="{style.taskboard}" />
					</div>
				</div>
                            </div>
			</g:HTMLPanel>
		</g:AbsolutePanel>
	</g:HTMLPanel>
</ui:UiBinder>
