<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my='urn:import:de.cismet.projecttracker.client.common.ui'>
    <ui:style>
        .taskboard {
        width: 100%;
        line-height:14px;
        min-height: 1px;
        }
        
    </ui:style>
    <g:HTMLPanel>
        <div
            style="position: relative; top: auto; left: auto; margin: 0 auto; z-index: 1; width:300px"
            class="modal">
            <div class="modal-header">
                <h3>Fill Preview</h3>
				<!--a class="close" href="">Ã—</a-->
            </div>
            <div class="modal-body" style="padding-bottom: 0px;">
                <g:HorizontalPanel ui:field="outerPanel">
                    <g:HTMLPanel>
                        <g:AbsolutePanel>
                            <g:HTMLPanel>
                                <div class="rowheader">
                                    <div class="span1V2 columns" style="text-align: center; margin-bottom: 10px; pointer: text;">
                                        <g:Label ui:field="before"/>
                                    </div>
                                </div>
                                <div>
                                    <div class="span1V2 columns">
                                        <my:FlowPanelWithSpacer ui:field="realPanel" styleName="{style.taskboard}" />
                                    </div>
                                </div>
                            </g:HTMLPanel>
                        </g:AbsolutePanel>
                    </g:HTMLPanel>
                    <g:HTMLPanel>
                        <g:AbsolutePanel>
                            <g:HTMLPanel>
                                <div class="rowheader">
                                    <div class="span1V2 columns" style="text-align: center; margin-bottom: 10px; pointer: text;">
                                        <g:Label ui:field="after" />
                                    </div>
                                </div>
                                <div>
                                    <div class="span1V2 columns">
                                        <my:FlowPanelWithSpacer ui:field="prevPanel" styleName="{style.taskboard}" />
                                    </div>
                                </div>
                            </g:HTMLPanel>
                        </g:AbsolutePanel>
                    </g:HTMLPanel>
                </g:HorizontalPanel>
            </div>
            <div class="modal-footer">
                <g:Button styleName="btn primary" text="OK" ui:field="okButton" />
                <g:Button styleName="btn primary" text="Cancel" ui:field="closeButton" />
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>