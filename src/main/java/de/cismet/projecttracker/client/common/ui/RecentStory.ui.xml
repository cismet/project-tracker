<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:de.cismet.projecttracker.client.common.ui">
	<ui:style>
		.taskboard {
			width: 100%;
                        min-height: 1px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:AbsolutePanel ui:field="boundaryPanel">
			<g:HTMLPanel>
                          <div class="rowheader">
                              <div class="span1V2 columns" style="text-align: center; margin-bottom: 10px; pointer: text;"><g:Label ui:field="recentLab" /></div>
                          </div>
			  <div class="timerow">
					<div class="span1V2 columns">
						<t:FlowPanelWithSpacer ui:field="recentTasks" styleName="{style.taskboard}" />
					</div>
				</div>
			</g:HTMLPanel>
		</g:AbsolutePanel>
	</g:HTMLPanel>
</ui:UiBinder>
