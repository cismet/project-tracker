<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:b2="urn:import:com.github.gwtbootstrap.datepicker.client.ui">
    <ui:style>
        .top-layer{
        z-index:50;
        margin-top:-265px;
        }
    </ui:style>
    <g:HTMLPanel >
        <div class="{style.top-layer}">
            <b:AlertBlock type="INFO" heading="Long search operation detected!" animation="true" ui:field="alert">
                <p>
                    The search operation that is in progress may take some time.
                    If you wish to cancel the search press the cancel button below.
                </p>
                <p>
                    <b:Button type="PRIMARY" ui:field="cancelButton">Cancel</b:Button>
                </p>
            </b:AlertBlock>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>